{
  "exclude": ["dist", "lib", "node_modules"],
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "experimentalDecorators": true,
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "noImplicitAny": true,
    "outDir": "./dist",
    "rootDirs": ["./src"],
    "preserveConstEnums": true,
    "sourceMap": true
  },
  "files": ["./src/paths.mts"],
  "ts-node": {
    "esm": true,
    "compilerOptions": {
      "module": "NodeNext"
    }
  }
}